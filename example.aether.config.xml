<!--
Example config file, showing how one could configure a priceguide setup
-->
<config>
    <site name="pgfoo.raymond.raw.no">
        <urlRules>
            <!-- Set up a branch of rules for UrlResources residing at pgfoo./prisguide/* -->
            <rule match="prisguide">
                <!-- Default rule for foobar -->
                <rule default="true">
                    <section>Priceguide</section>
                    <subsection>Frontpage</subsection>
                    <template>pgfoo.raymond.raw.no_prisguide_default</template>
                    <module>Ad160</module>
                    <module>Categories</module>
                    <module>SearchControl</module>
                    <!-- <option name="RequirePermission">editor</option> -->
                </rule>
            </rule>
            <!-- A default rule will be the fallback rule if no match is found -->
            <rule default="true">
                <section>Error</section>
                <subsection>PageNotFound</subsection>
            </rule>
        </urlRules>
    </site>
</config>
