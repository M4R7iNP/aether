#!/usr/bin/env php
<?php

use Aether\Aether;

$basePath = getcwd();

if (! file_exists("{$basePath}/config/aether.config.xml")) {
    echo "Failed to detect Aether project.\n";

    exit(1);
}

require_once $basePath.'/vendor/autoload.php';

define('ARTISAN_BINARY', __FILE__);

$aether = new Aether($basePath);
